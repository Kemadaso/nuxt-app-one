#!/bin/bash

name=$1
#ecosystem="mnt/e/nodeprojects/expressexample/ecosystem.config.js"
#$or="/mnt/e/nodeprojects/expressexample/"
if [ -z "$name" ] || [ "$name" == "start" ];then
    echo "iniciando el servidor"
    echo "$ecosystem"
    cd /mnt/e/nodeprojects/expressexample/
    sudo pm2 start "ecosystem.config.js"
    service mysql restart
    service apache2 restart
elif [ "$name" = "stop" ];then
    echo "apagando el servidor"

    sudo pm2 delete www
    service apache2 stop
    service mysql stop
else
    echo "no ejecutado"
fi


